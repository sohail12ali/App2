<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.View.OtherPages.BeforeAndAfterPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Accident Scene"
                    Clicked="BeforeAndAfterButton"
                    x:Name="AccidentScene"
                    Style="{StaticResource NormalButtonStyle}"
                    />
            
            <Label Text="Or"
                VerticalOptions="Center" 
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="Black"
                HorizontalOptions="Center" />
            
            <Button Text="Post Accident"
                    Clicked="BeforeAndAfterButton"
                    x:Name="PostAccident"
                    Style="{StaticResource NormalButtonStyle}"
                    />
             
        </StackLayout>
    </ContentPage.Content>
</ContentPage>